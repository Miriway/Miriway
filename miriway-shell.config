#######################
# Install: sudo apt install xfce4-terminal xfce4-appfinder
#meta=a:xfce4-appfinder --disable-server # Launcher
#ctrl-alt=t:xfce4-terminal               # Terminal emulator

# Using LXQt components
# Install: sudo apt install lxqt-policykit qterminal lxqt-runner
#shell-component=lxqt-policykit-agent
#ctrl-alt=t:qterminal
#meta=a:lxqt-runner

meta=Left:@dock-left
meta=Right:@dock-right
meta=Space:@toggle-maximized
meta=Home:@workspace-begin
meta=End:@workspace-end
meta=Page_Up:@workspace-up
meta=Page_Down:@workspace-down
ctrl-alt=BackSpace:@exit
